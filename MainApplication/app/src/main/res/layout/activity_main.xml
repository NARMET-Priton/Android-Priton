<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    дописать минимальный дизайн-->
<!--    дописать расположение кнопки-->
    <Button
        android:id="@+id/btnRecursionPalindrome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/btnRecursionPalindrome_name"
        />

    <Button
        android:id="@+id/btnWeather"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="25sp"
        android:layout_below="@id/btnRecursionPalindrome"
        android:layout_centerHorizontal="true"

        android:text="@string/btnWeather"
        />
    <Button
        android:id="@+id/btnVerifica1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="25sp"
        android:layout_below="@id/btnWeather"
        android:layout_centerHorizontal="true"

        android:text="Vierifica 1"
        />

    <Button
        android:id="@+id/btnList"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="25sp"
        android:layout_below="@id/btnVerifica1"
        android:layout_centerHorizontal="true"

        android:text="List (Name Surname)"
        />


</RelativeLayout>